@model Task_Management_System.ViewModels.TeamAssign

@{
	ViewData["Title"] = "Teams";
	Layout = "~/Views/Shared/_Tasks_Layout.cshtml";
}

<div class="row justify-content-center">



	@* <input type="hidden" name="TeamId" value="@Model.TeamId"> *@

	<table class="table">
		<thead>
			<tr>
				@* <th>Employee ID</th> *@
				<th>Name</th>
				<th>Role</th>
				
			</tr>
		</thead>
		<tbody>
			@foreach (var employee in Model.Assign_User)
			{
				<tr>
					@* <td>@employee.EmployeeId</td> *@
					<td>@employee.Employee_Name</td>
					<td>
						<ul style="list-style-type:none">
							@foreach (var role in employee.Employee_Role)
							{
								<li>@role</li>
							}
						</ul>
					</td>
					<td>

						<a asp-controller="Teams" asp-action="EditRole" asp-route-empId="@employee.Employee_Id" class="btn btn-secondary" style="width:100px">
							Edit
						</a>
					</td>
					<td>
						
					<form method="post" asp-action="RemoveEmp">
						<input type="hidden" name="TeamId" value="@Model.Team_Id" />
						<input type="hidden" name="EmployeeId" value="@employee.Employee_Id" />
						<button type="submit">Remove</button>
					</form>
					</td>

					@* <a asp-controller="Teams" asp-action="RemoveEmp" asp-route-id="@employee.EmployeeId" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i></a>
			 *@	</tr>
			}
		</tbody>
	</table>
	@* <button type="submit">Edit</button> *@
	<a asp-controller="Teams" asp-action="TeamAssign" asp-route-id="@Model.Team_Id" class="btn btn-secondary" style="width:150px">
		Add members
	</a>



</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

