@model Task_Management_System.ViewModels.TeamVM

@{
	ViewData["Title"] = "Team";
	Layout = "~/Views/Shared/_Tasks_Layout.cshtml";
}

<div class="row justify-content-center">


	<form method="post" asp-action="AddTeam" enctype="multipart/form-data">
		<input asp-for="Team_Id" hidden />

		<div class="mb-3">
			<label asp-for="Team_Name"></label>
			<input asp-for="Team_Name" class="form-control" />
			<span asp-validation-for="Team_Name" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
	</form>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}


