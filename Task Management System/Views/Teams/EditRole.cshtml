@model Task_Management_System.ViewModels.UserModel
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Tasks_Layout.cshtml";
}

<form method="post" asp-action="EditRole">
    @* asp-action="EditRole" *@
    <input type="hidden" name="EmployeeId" value="@Model.Employee_Id">
    <div class="form-floating py-2 ">
    <label asp-for="@Model.Role" aria-required="false">Role *</label>
        <select asp-for="@Model.Role" asp-items="@(new SelectList(Model.Employee_Role,"Name"))" class=form-select>
    <option disabled selected>-Select Role-</option>
    </select>
    </div>
   
    
    <button type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

